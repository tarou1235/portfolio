<% provide(:title, 'Sign up') %>
<h1>Sign up</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@cost) do |f| %>
      <%= f.label :内容 %>
      <%= f.text_field :name %>

      <%= f.label :"立替金額" %>
      <%= f.text_field :payment %>


      <%= fields_for @user do |cf| %>
        <%= cf.text_field :line_id %>
      <% end %>

      <%= f.submit "Create my account", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
