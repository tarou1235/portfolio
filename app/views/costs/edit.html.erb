<% provide(:title, "更新") %>
<h1>更新</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <% @items.each do |item| %>
      <%= form_for(item) do |f| %>
      <%= item.user.name %>
      <%= f.label :"支払額" %>
      <%= f.number_field :payment, class: 'form-control' %>
      <%= f.submit "変更", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
