<% provide(:title, "更新") %>
<h1>更新</h1>
<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%= form_for(@item) do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name, class: 'form-control' %>
    <%= f.label :payment %>
    <%= f.number_field :payment, class: 'form-control' %>
    <%= f.submit "変更", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>
